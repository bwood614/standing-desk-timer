{
  "manifest_version": 3,
  "name": "Standing Desk Timer",
  "description": "An extension to motivate you to stand up.",
  "version": "1.0",
  "action": {
    "default_popup": "hello.html",
    "default_icon": "images/Hi_image.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["scripts/content.js"],
      "css": ["styles.css"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["activeTab"]
}
